!!!
%html
  %head
    = csrf_meta_tag
    
    %link(rel="stylesheet" href="http://code.jquery.com/mobile/1.0a3/jquery.mobile-1.0a3.min.css")
    = stylesheet_link_tag :all
    
    %script(src="http://code.jquery.com/jquery-1.5.min.js")
    %script(src="http://code.jquery.com/mobile/1.0a3/jquery.mobile-1.0a3.min.js")
    
    %meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1")
    
    :javascript
      $('#tumblr_page').live('pagecreate',function(event){
        $('#tumblr_submit').tap(function(){
          $.mobile.changePage({
            url: $("#tumblr_form").attr('action'),
            type: 'post',
            data: $("#tumblr_form").serialize()
          }, "pop", true);
        });
      });
    
  %body
    = yield
